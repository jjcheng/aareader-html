                            errors.push("电子邮件格式错误");
                        }
                    }
                    if (message == "" || message.length < 10) {
                        $("textarea[name=message]").addClass("error");
                        errors.push("内容不得少于10个字符");
                    }
                    if (errors.length > 0) {
                        var text = errors.join("\n");
